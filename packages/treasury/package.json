{
  "name": "@agoric/treasury",
  "version": "0.5.0",
  "description": "Core cryptoeconomy contracts",
  "parsers": {
    "js": "mjs"
  },
  "main": "src/stablecoinMachine.js",
  "engines": {
    "node": ">=11.0"
  },
  "scripts": {
    "build": "yarn build:bundles",
    "build:bundles": "node -r esm scripts/build-bundles.js",
    "test": "ava",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix && yarn lint:types",
    "lint-check": "yarn lint",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:eslint": "eslint '**/*.js'",
    "lint:types": "tsc -p jsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "^0.3.0",
    "@agoric/bundle-source": "^1.3.8",
    "@agoric/captp": "^1.7.14",
    "@agoric/deploy-script-support": "^0.2.10",
    "@agoric/ertp": "^0.11.3",
    "@agoric/eventual-send": "^0.13.15",
    "@agoric/marshal": "^0.4.12",
    "@agoric/nat": "^4.1.0",
    "@agoric/notifier": "^0.3.15",
    "@agoric/promise-kit": "^0.2.14",
    "@agoric/store": "^0.4.15",
    "@agoric/swingset-vat": "^0.17.3",
    "@agoric/zoe": "^0.16.0"
  },
  "devDependencies": {
    "@agoric/babel-standalone": "^7.14.3",
    "@agoric/install-ses": "^0.5.14",
    "ava": "^3.12.1",
    "esm": "agoric-labs/esm#Agoric-built",
    "ses": "^0.13.2"
  },
  "files": [
    "bundles/",
    "src/",
    "exported.js",
    "NEWS.md"
  ],
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "esm"
    ],
    "timeout": "10m"
  },
  "eslintConfig": {
    "extends": [
      "@endo"
    ]
  },
  "eslintIgnore": [
    "bundle-*.js"
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}
