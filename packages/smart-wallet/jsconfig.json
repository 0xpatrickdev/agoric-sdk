{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
  },
  "include": [
    "*.js",
    "scripts/**/*.js",
    "src/**/*.js",
    "test/**/*.js",
    "tools/**/*.js",
  ],
}
